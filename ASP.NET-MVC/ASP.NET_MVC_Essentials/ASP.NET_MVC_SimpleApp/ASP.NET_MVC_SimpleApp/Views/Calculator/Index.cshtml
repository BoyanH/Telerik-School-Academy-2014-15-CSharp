@model ASP.NET_MVC_SimpleApp.Models.BitCalculator
@{
    ViewBag.Title = "Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bit Calculator</h2>

<div class="container well well-lg">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("Index", "Calculator", FormMethod.Post))
            {

                @Html.Label("InputQuantity", "Quantity")
                <br />
                @Html.TextBoxFor(m => m.SelectedAmount, new { id = "SelectedAmount", @class = "form-control" })
                <br />
                @Html.Label("InputType", "Type")
                <br />
                @Html.DropDownListFor((m => m.SelectedUnitType), Model.MeasureTypeSelection, new { id = "InputType", @class = "form-control" })
                <br />
                @Html.Label("InputKilo", "Kilo")
                <br />
                @(Html.DropDownListFor(x => x.SelectedKilo, Model.KiloTypeSelection, new { id = "InputKilo", @class = "form-control" })

                )
                <br />
                <input type="submit" name="Calculate" value="Calculate" class="btn btn-info btn-sm" />
            }
        </div>

        <div class="col-md-8 col-md-offset-2">
            @Html.Partial("_BitConversions", Model.Conversions)
        </div>
    </div>
</div>

